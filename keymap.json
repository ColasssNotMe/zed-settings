// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "alt-b": "workspace::ToggleRightDock",
      "ctrl-shift-b": "project_panel::ToggleFocus",
      // "shift-alt-b": "workspace::ToggleLeftDock",
      // "ctrl-alt-b": "agent::ToggleFocus",
      "ctrl-alt-b": "agent::ToggleFocus",
      "alt-l": "workspace::ToggleBottomDock",
      "alt-u": "file_finder::Toggle",
      "alt-p": "command_palette::Toggle",

      // close other tabs
      "ctrl-1": ["workspace::ActivatePane", 0],
      "ctrl-+": ["workspace::ActivatePane", 0],
      "ctrl-2": ["workspace::ActivatePane", 1],
      "ctrl-[": ["workspace::ActivatePane", 1],
      "ctrl-3": ["workspace::ActivatePane", 2],
      "ctrl-{": ["workspace::ActivatePane", 2],
      "ctrl-4": ["workspace::ActivatePane", 3],
      "ctrl-(": ["workspace::ActivatePane", 3],
      "ctrl-5": ["workspace::ActivatePane", 4],
      "ctrl-&": ["workspace::ActivatePane", 4],
      "ctrl-6": ["workspace::ActivatePane", 5],
      "ctrl-@": ["workspace::ActivatePane", 5],
      "ctrl-7": ["workspace::ActivatePane", 6],
      "ctrl-)": ["workspace::ActivatePane", 6],
      "ctrl-8": ["workspace::ActivatePane", 7],
      "ctrl-}": ["workspace::ActivatePane", 7],
      "ctrl-9": ["workspace::ActivatePane", 8],
      "ctrl-*": ["workspace::ActivatePane", 8]
    }
  },

  {
    "context": "Pane",
    "bindings": {
      "alt-1": ["pane::ActivateItem", 0],
      "alt-2": ["pane::ActivateItem", 1],
      "alt-3": ["pane::ActivateItem", 2],
      "alt-4": ["pane::ActivateItem", 3],
      "alt-5": ["pane::ActivateItem", 4],
      "alt-6": ["pane::ActivateItem", 5],
      "alt-7": ["pane::ActivateItem", 6],
      "alt-8": ["pane::ActivateItem", 7],
      "alt-9": ["pane::ActivateItem", 8],
      "alt-+": ["pane::ActivateItem", 0],
      "alt-[": ["pane::ActivateItem", 1],
      "alt-{": ["pane::ActivateItem", 2],
      "alt-(": ["pane::ActivateItem", 3],
      "alt-&": ["pane::ActivateItem", 4],
      "alt-@": ["pane::ActivateItem", 5],
      "alt-)": ["pane::ActivateItem", 6],
      "alt-}": ["pane::ActivateItem", 7],
      "alt-*": ["pane::ActivateItem", 8]
    }
  },

  // nulled keybinds
  {
    "context": "vim_mode ==visual",
    "bindings": {
      "shift-s": "vim::PushAddSurrounds"
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "vim_mode == literal",
    "bindings": {
      "ctrl-m": null
    }
  },
  {
    "context": "Editor || vim_mode==normal",
    "bindings": {
      "ctrl-m": "editor::MoveToEnclosingBracket"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-'": null
    }
  },
  {
    "context": "Workspace || Editor",
    "bindings": {
      "ctrl-'": "pane::CloseOtherItems"
    }
  },
  {
    "context": "Workspace || Editor",
    "bindings": {
      "alt-left": [
        "workspace::MoveItemToPaneInDirection",
        {
          "direction": "left"
        }
      ],
      "alt-right": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "right" }
      ],
      "alt-up": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "up" }
      ],
      "alt-down": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "down" }
      ]
    }
  }
]
